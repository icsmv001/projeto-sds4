package com.devsuperior.dsvendas.repositories;

import javax.annotation.ManagedBean;

import com.devsuperior.dsvendas.utils.controllers.UploadReadArquivoController2;

@ManagedBean
public class LendoTxt {
			private UploadReadArquivoController2 file;
		
		public void upload(FileUploadEvent event) throws IOException{
			this.file = event.getFile();
			
			 String conteudoDoArquivo = new Scanner(file.getInputstream(),"UTF-8").useDelimiter("\\A").next();
			
			System.out.println(conteudoDoArquivo);
			
		}
		
	}

}
