package com.devsuperior.dsvendas.repositories;

import java.io.IOException;
import java.util.Scanner;

import org.springframework.stereotype.Component;
import org.springframework.web.multipart.MultipartFile;
@Component
public class ReadFileRepository2 {
	public void ReadFile2(MultipartFile foto) {
	this.LerArq2(foto);
	}
	
	public void LerArq2(MultipartFile foto) {
		//System.out.println( " 3 ate aqui  ok !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! ######################" );
		 Scanner sc;
		try {
			sc = new Scanner(foto.getInputStream());
		  while (sc.hasNext()) {
	            System.out.print(sc.nextLine());
	            System.out.println( " 4 ate aqui  ok !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! ######################" );
	        }
	        sc.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			/// e.printStackTrace();
			throw new RuntimeException("Problemas na tentativa de LerArq arquivos");
		}
	      
		
}}




 
